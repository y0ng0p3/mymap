mixin navbar(user)
    nav.navbar.navbar-expand.navbar-light.bg-light
        a(href="/", aria-label="Rubber Duck").navbar-brand.mr-0.mr-md-2
            img(src="/images/Rubber_duck.jpg", width="36", height="36")
        .collapse.navbar-collapse
            ul.navbar-nav.mr-auto
                li.nav-item
                    a.nav-link(href="/") Home
                li.nav-item
                    a.nav-link(href="/api/locations") Locations
        .navbar-right
            if user
                span.navbar-text Hello #{user.email}!
        .navbar-right   
            ul.navbar-nav.mr-auto
                li.nav-item
                    a.nav-link(href="/api/signup") Sign up
                li.nav-item
                    a.nav-link(href="/api/login") Login
                li.nav-item
                    a.nav-link(href="/api/logout") Logout